<TopNav id='emberclear-topnav'/>

<NotificationContainer @position='top-right' />
<NotificationPrompt />

<OffCanvasContainer
  class='no-overflow'
  @contacts={{model.contacts}}
  @channels={{model.channels}}
>
  <ServiceWorkerUpdateNotify>
    <a class='service-worker-update-notify notification is-info' href=''>
      {{t 'status.updateAvailable'}}
    </a>
  </ServiceWorkerUpdateNotify>

  {{outlet}}

</OffCanvasContainer>


<MultipleFromElsewhere @name='modals' />

{{!--
  Static Modals / Modals that will /
  could get toggleed from _multiple_ places.
--}}
<ModalStatic @name='add-friend' as |isActive actions|>
  <AddContact @isActive={{isActive}} @close={{actions.close}} />
</ModalStatic>

<ModalStatic @name='show-my-info' as |isActive actions|>
  <ShowMyInfo @isActive={{isActive}} @close={{actions.close}} />
</ModalStatic>

<ModalStatic @name='keyboard-shortcuts' as |isActive actions|>
  <KeyboardShortcuts @isActive={{isActive}} @close={{actions.close}} />

  <KeyboardPress @key='ctrl+KeyH' @onDown={{action actions.toggle}} />
  <KeyboardPress @key='ctrl+Slash' @onDown={{action actions.toggle}} />
</ModalStatic>

<ModalStatic @name='search' as |isActive actions|>
  <Search @isActive={{isActive}} @close={{actions.close}} />

  <KeyboardPress @key='ctrl+KeyK' @onDown={{action actions.toggle}} />
</ModalStatic>


