<FocusCard @title={{t 'ui.setup.almostReady'}}>

  <div class='content'>
    {{t 'ui.setup.mnemonicPrompt'}}

    <MnemonicDisplay @privateKey={{model.privateKey}} />

    {{t 'ui.setup.note'}}
  </div>

  <div class='is-pulled-right'>
    <button class='button' {{action (transition-to 'setup.index')}}>
      {{t 'buttons.back'}}
    </button>

    <button class='button' {{action (transition-to 'chat')}}>
      {{t 'buttons.next'}}
    </button>
  </div>

</FocusCard>
