<Modal @isActive={{@isActive}} @close={{action @close}}>

  <div class='flex-row align-items-center'>
    <h3 class='is-size-3'>
      {{t 'ui.shortcuts.title'}}
    </h3>
    <span class='m-l-md'>
      {{t 'ui.shortcuts.key.ctrlSlash' htmlSafe=true}}
    </span>
  </div>

  <hr>

  <p class='content'>
    <label class='is-uppercase'>
      {{t 'ui.shortcuts.actions.search'}}
    </label><br>
    {{t 'ui.shortcuts.key.ctrlK' htmlSafe=true}}
  </p>

  <p class='content'>
    <label class='is-uppercase'>
      {{t 'ui.shortcuts.actions.toggleSidebar'}}
    </label><br>
    {{t 'ui.shortcuts.key.ctrlSpace' htmlSafe=true}}
  </p>

  <p class='content'>
    <label class='is-uppercase'>
      {{t 'ui.shortcuts.actions.toggleHelp'}}
    </label><br>
    {{t 'ui.shortcuts.key.ctrlH' htmlSafe=true}} <br>
    {{t 'ui.shortcuts.key.ctrlSlash' htmlSafe=true}}

  </p>

</Modal>
