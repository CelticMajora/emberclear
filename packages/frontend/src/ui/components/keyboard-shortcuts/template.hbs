<Modal @isActive={{@isActive}} @close={{action @close}}>

  <div class='flex-row align-items-center'>
    <h3 class='is-size-3'>
      Keyboard Shortcuts
    </h3>
    <span class='m-l-md'>
      <i class='key'>ctrl</i> + <i class='key'>/</i>
    </span>
  </div>

  <hr>

  <p class='content'>
    <label class='is-uppercase'>Search Everything</label><br>
    <i class='key'>ctrl</i> + <i class='key'>k</i>
  </p>

  <p class='content'>
    <label class='is-uppercase'>Toggle the Sidebar</label><br>
    <i class='key'>ctrl</i> + <i class='key'>space</i>
  </p>

  <p class='content'>
    <label class='is-uppercase'>Toggle Keyboard Help</label><br>
    <i class='key'>ctrl</i> + <i class='key'>h</i> <br>
    <i class='key'>ctrl</i> + <i class='key'>/</i>
  </p>

</Modal>
