<div class='modal {{if @isActive 'is-active'}}'>
  <div
    class='modal-background'
    onclick={{action @close on='click'}}
    role='button'
    aria-label={{t 'buttons.ariaLabel.modalBackdrop'}}
  />

  <div class='modal-content'>
    <div class='box'>
      {{yield}}
    </div>
  </div>

  <button
    class='modal-close is-large'
    onclick={{action @close}}
    aria-label={{t 'buttons.ariaLabel.closeModal'}}
  />
</div>
