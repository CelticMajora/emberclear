{
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "masterIssue": true,
  "ignorePaths": [
      "packages/android-wrapper"
  ],
  "packageRules": [
    {
      "paths": ["packages/benchmarks/**"],
      "enabled": false
    },
    {
      "paths": ["packages/frontend/package.json"],
      "rangeStrategy": "bump"
    },
    {
      "paths": ["packages/frontend/Dockerfile"],
      "enabled": false
    },
    {
      "packagePatterns": [
        "^@babel*"
      ],
      "groupName": "Babel Transpilation"
    },
    {
      "packagePatterns": [
        "^@ember-data*"
      ],
      "groupName": "Ember Data"
    },
    {
      "packagePatterns": [
        "^@faltest*"
      ],
      "groupName": "FalTest Smoke Testing by CrowdStrike"
    },
    {
      "packagePatterns": [
        "^@types\/*"
      ],
      "groupName": "Type Definitions"
    },
    {
      "packagePatterns": [
        "^@embroider*"
      ],
      "groupName": "embroider"
    },
    {
      "packagePatterns": [
        ".*typescript-eslint.*"
      ],
      "groupName": "TypeScript ESLint"
    }
  ]
}
